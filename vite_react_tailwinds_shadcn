#setup vite, react, tailwinds, shadcn in one line of linux code. 

npm create vite@latest my-project -- --template react && cd my-project && npm install -D tailwindcss postcss autoprefixer && npx tailwindcss init -p && echo '/** @type {import("tailwindcss").Config} */ export default { content: ["./index.html", "./src/**/*.{js,ts,jsx,tsx}"], theme: { extend: {} }, plugins: [], }' > tailwind.config.js && echo '@tailwind base; @tailwind components; @tailwind utilities;' > ./src/index.css && npm install -D @types/node && echo '{ "compilerOptions": { "baseUrl": ".", "paths": { "@/*": ["./src/*"] } } }' > tsconfig.json && echo 'import path from "path"; import react from "@vitejs/plugin-react"; import { defineConfig } from "vite"; export default defineConfig({ plugins: [react()], resolve: { alias: { "@": path.resolve(__dirname, "./src"), }, }, });' > vite.config.ts && npx shadcn@latest init && npx shadcn@latest add button && npm run dev
